@model not_defteri.Models.Not;


<head>
    
    <style>
        /* Global styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        /* Page Header */
        h1 {
            text-align: center;
            color: #333;
            margin-top: 40px;
        }

        /* Form container */
        .row {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .col-md-4 {
            width: 100%;
            max-width: 600px;
            background-color: #ffffff;
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Form elements */
        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-size: 1.1em;
            color: #333;
            margin-bottom: 8px;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
            color: #333;
            margin-top: 5px;
        }

        textarea {
            resize: vertical;
            min-height: 150px;
        }

        .btn-primary {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 12px 25px;
            font-size: 1.1em;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #45a049;
            }

        /* Validation messages */
        .text-danger {
            color: #d9534f;
            font-size: 0.9em;
        }

        /* Back to list link */
        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            font-size: 1.2em;
        }

            .back-link a {
                color: #007bff;
                text-decoration: none;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }

    </style>
</head>
<body>

    <h1>Yeni Not Oluştur</h1>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Olustur">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Oluştur" class="btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="back-link">
        <a asp-action="Index">Listeye Geri Dön</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>

